<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
tools:context="com.example.cars.EditProfileActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="340dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/gradientbackground"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/White"
            android:fontFamily="@font/instafont"
            android:text="@string/auto_info"
            android:textSize="30sp"
            android:gravity="center"
            tools:targetApi="jelly_bean" />
        <ImageButton
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/transparent_img"
            android:id="@+id/ed_profile"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/todo" />
        <ImageButton
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/arrow_back"
            android:background="@drawable/transparent_img"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/todo1" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/photocercle"
                android:layout_gravity="center"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@null"/>
            <Button
                android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:background="@drawable/white_onclick_grey"
                android:text="@string/upload_picture" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/displayed_name"
                android:layout_marginTop="15dp"
                android:textColor="@color/startblue"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="@string/new_name"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:singleLine="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectDate"
            android:layout_gravity="center">
        <EditText
            android:id="@+id/edit_age"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="@string/new_age"
            android:padding="12dp"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:singleLine="true"
            android:ems="10"
            android:inputType="date"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <Button
            android:id="@+id/save_edit_button"
            android:layout_width="130dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:background="@drawable/white_onclick_grey"
            android:text="@string/apply_changes" />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/relLayoutBottom"
    android:layout_alignParentBottom="true"
    android:background="@drawable/gradientbackground">
    <android.support.design.widget.BottomNavigationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:menu="@menu/my_navigation_items"
        android:background="@drawable/gradientbotbar">
    </android.support.design.widget.BottomNavigationView>
</RelativeLayout>
</RelativeLayout>