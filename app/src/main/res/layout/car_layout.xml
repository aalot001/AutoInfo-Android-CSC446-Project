<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <ImageView
        android:id="@+id/carMakeImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/car_image"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:id="@+id/infoSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/carMakeImg"
        android:layout_toRightOf="@+id/carMakeImg">
        <TextView
            android:id="@+id/description"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/description"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pricingSection"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoSection"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">
        <TextView
        android:id="@+id/carName"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/Name"  />
        <TextView
        android:id="@+id/carYear"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:text="@string/Year"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content" />
        <TextView
        android:id="@+id/carPrice"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:text="@string/Price"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/click"
            android:text="@string/click_for_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/carImg"
            android:layout_width="385dp"
            android:layout_height="300dp"/>
    </LinearLayout>
</RelativeLayout>